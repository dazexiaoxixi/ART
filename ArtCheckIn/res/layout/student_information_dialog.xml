<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stdInformationDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/examnieePic"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/default_picture" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp" >

            <TextView
                android:id="@+id/examnieeIDText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="考号:"
                android:textSize="25sp" />
            
            <TextView
                android:id="@+id/examnieeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/examnieeIDText"
                android:layout_toRightOf="@+id/examnieeIDText"
                android:layout_marginLeft="5dp"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/exmnieeNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/examnieeIDText"
                android:layout_marginTop="15dp"
                android:text="姓名:"
                android:textSize="25sp" />
            
            <TextView
                android:id="@+id/exmnieeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/exmnieeNameText"
                android:layout_toRightOf="@+id/exmnieeNameText"
                android:layout_alignLeft="@+id/examnieeID"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/exmnieeGenderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/exmnieeNameText"
                android:layout_marginTop="15dp"
                android:text="性别:"
                android:textSize="25sp" />
            
            <TextView
                android:id="@+id/exmnieeGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/exmnieeGenderText"
                android:layout_toRightOf="@+id/exmnieeGenderText"
                android:layout_alignLeft="@+id/examnieeID"
                android:textSize="25sp" />
            
            <TextView
                android:id="@+id/exmnieeIdentityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/exmnieeGenderText"
                android:layout_marginTop="15dp"
                android:text="身份证:"
                android:textSize="25sp" />
            
            <TextView
                android:id="@+id/exmnieeIdentity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/exmnieeIdentityText"
                android:layout_toRightOf="@+id/exmnieeIdentityText"
                android:layout_marginLeft="5dp"
                android:text="452613198602056243"
                android:textSize="25sp" />
             
        </RelativeLayout>
    </LinearLayout>

